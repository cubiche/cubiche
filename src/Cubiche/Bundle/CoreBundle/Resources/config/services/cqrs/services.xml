<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--  locator  -->
        <service id="cubiche.command_bus.service_container_locator" class="Cubiche\Infrastructure\Bus\Handler\Locator\ContainerLocator">
            <argument type="service" id="service_container"/>
        </service>

        <service id="cubiche.command_bus.validator_service_container_locator" class="Cubiche\Infrastructure\Bus\Handler\Locator\ContainerLocator">
            <argument type="service" id="service_container"/>
        </service>

        <service id="cubiche.query_bus.service_container_locator" class="Cubiche\Infrastructure\Bus\Handler\Locator\ContainerLocator">
            <argument type="service" id="service_container"/>
        </service>

        <service id="cubiche.query_bus.validator_service_container_locator" class="Cubiche\Infrastructure\Bus\Handler\Locator\ContainerLocator">
            <argument type="service" id="service_container"/>
        </service>

        <!--  factory  -->
        <service id="cubiche.bus.handler_class_resolver.factory" class="Cubiche\Infrastructure\Bus\Factory\MessageHandlerResolverFactory" />
        <service id="cubiche.command_bus.factory" class="Cubiche\Infrastructure\Bus\Factory\Bus\CommandBusFactory" />
        <service id="cubiche.query_bus.factory" class="Cubiche\Infrastructure\Bus\Factory\Bus\QueryBusFactory" />

        <!--  resolver  -->
        <service id="cubiche.command_bus.handler_resolver" class="Cubiche\Core\Bus\Handler\Resolver\MessageHandlerResolver">
            <factory service="cubiche.bus.handler_class_resolver.factory" method="createForCommand" />

            <argument type="service" id="cubiche.command_bus.service_container_locator"/>
        </service>

        <service id="cubiche.command_bus.validator_handler_resolver" class="Cubiche\Core\Bus\Handler\Resolver\MessageHandlerResolver">
            <factory service="cubiche.bus.handler_class_resolver.factory" method="createForCommandValidator" />

            <argument type="service" id="cubiche.command_bus.validator_service_container_locator"/>
        </service>

        <service id="cubiche.query_bus.handler_resolver" class="Cubiche\Core\Bus\Handler\Resolver\MessageHandlerResolver">
            <factory service="cubiche.bus.handler_class_resolver.factory" method="createForQuery" />

            <argument type="service" id="cubiche.query_bus.service_container_locator"/>
        </service>

        <service id="cubiche.query_bus.validator_handler_resolver" class="Cubiche\Core\Bus\Handler\Resolver\MessageHandlerResolver">
            <factory service="cubiche.bus.handler_class_resolver.factory" method="createForQueryValidator" />

            <argument type="service" id="cubiche.query_bus.validator_service_container_locator"/>
        </service>

        <!--  bus  -->
        <service id="cubiche.command_bus" class="Cubiche\Core\Bus\Command\CommandBus">
            <factory service="cubiche.command_bus.factory" method="create" />

            <argument type="service" id="cubiche.command_bus.handler_resolver"/>
            <argument type="service" id="cubiche.command_bus.validator_handler_resolver"/>
        </service>

        <service id="cubiche.command_bus.non_locking" class="Cubiche\Core\Bus\Command\CommandBus">
            <factory service="cubiche.command_bus.factory" method="createNonLocking" />

            <argument type="service" id="cubiche.command_bus.handler_resolver"/>
            <argument type="service" id="cubiche.command_bus.validator_handler_resolver"/>
        </service>

        <service id="cubiche.query_bus" class="Cubiche\Core\Bus\Query\QueryBus">
            <factory service="cubiche.query_bus.factory" method="create" />

            <argument type="service" id="cubiche.query_bus.handler_resolver"/>
            <argument type="service" id="cubiche.query_bus.validator_handler_resolver"/>
        </service>
    </services>
</container>